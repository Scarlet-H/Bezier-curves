<Window x:Class="Bezier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bezier"
        mc:Ignorable="d"
        Title="Кривая Безье" Height="850" Width="1000">
    <Grid Name="grid">
        <TextBox Name="countInput" TextAlignment="Center" HorizontalAlignment="Left" Margin="860,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60" Height="50" FontSize="20" TextChanged="countInput_TextChanged"/>
        <Canvas x:Name="canvas" Width="800" Height="800" Margin="10,0,190,0" MouseDown="Canvas_MouseDown" Background="Transparent">
        </Canvas>
    </Grid>
</Window>
